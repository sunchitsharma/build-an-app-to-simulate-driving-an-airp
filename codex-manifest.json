{"files": [{"path": "index.html", "content": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n  <meta charset=\"UTF-8\" />\n  <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\" />\n  <title>Highway Airplane Drive</title>\n  <style>\n    html, body {\n      margin: 0;\n      padding: 0;\n      width: 100%;\n      height: 100%;\n      overflow: hidden;\n      background: #0b1d2a;\n      font-family: Arial, sans-serif;\n      color: #eef2f5;\n      user-select: none;\n    }\n    #ui {\n      position: absolute;\n      top: 10px;\n      left: 10px;\n      background: rgba(0, 0, 0, 0.4);\n      padding: 10px 12px;\n      border-radius: 8px;\n      font-size: 14px;\n      line-height: 1.4;\n    }\n    canvas {\n      display: block;\n    }\n  </style>\n</head>\n<body>\n  <div id=\"ui\">\n    <div><strong>Controls:</strong> ← → steer | ↑ accelerate | ↓ brake</div>\n    <div id=\"speed\">Speed: 0 km/h</div>\n  </div>\n  <canvas id=\"c\"></canvas>\n  <script>\n    const canvas = document.getElementById('c');\n    const ctx = canvas.getContext('2d');\n    let w = window.innerWidth;\n    let h = window.innerHeight;\n    canvas.width = w;\n    canvas.height = h;\n\n    window.addEventListener('resize', () => {\n      w = window.innerWidth;\n      h = window.innerHeight;\n      canvas.width = w;\n      canvas.height = h;\n    });\n\n    const plane = {\n      x: 0,\n      y: 0,\n      width: 40,\n      height: 70,\n      color: '#cfd3ff',\n      speed: 0,\n      angle: 0,\n    };\n\n    const road = {\n      width: Math.min(500, w * 0.6),\n      laneCount: 3,\n      lineOffset: 0,\n    };\n\n    const state = {\n      keys: {},\n      maxSpeed: 220 / 3.6, // m/s (approx 220 km/h)\n      accel: 4.0, // m/s^2\n      brake: 7.0,\n      friction: 1.5,\n      steerSpeed: 120, // pixels/sec lateral\n    };\n\n    function reset() {\n      plane.x = w / 2;\n      plane.y = h * 0.75;\n      plane.speed = 0;\n      road.width = Math.min(500, w * 0.6);\n    }\n    reset();\n\n    window.addEventListener('keydown', (e) => {\n      state.keys[e.key] = true;\n    });\n    window.addEventListener('keyup', (e) => {\n      state.keys[e.key] = false;\n    });\n\n    function update(dt) {\n      // Forward/backward speed control\n      if (state.keys['ArrowUp']) {\n        plane.speed += state.accel * dt;\n      }\n      if (state.keys['ArrowDown']) {\n        plane.speed -= state.brake * dt;\n      }\n      // friction\n      if (!state.keys['ArrowUp'] && !state.keys['ArrowDown']) {\n        if (plane.speed > 0) {\n          plane.speed = Math.max(0, plane.speed - state.friction * dt);\n        } else {\n          plane.speed = Math.min(0, plane.speed + state.friction * dt);\n        }\n      }\n\n      plane.speed = Math.max(0, Math.min(state.maxSpeed, plane.speed));\n\n      // Steering\n      const steerDir = (state.keys['ArrowLeft'] ? -1 : 0) + (state.keys['ArrowRight'] ? 1 : 0);\n      plane.x += steerDir * state.steerSpeed * dt;\n      const halfRoad = road.width / 2 - plane.width / 2 - 10;\n      const center = w / 2;\n      if (plane.x < center - halfRoad) plane.x = center - halfRoad;\n      if (plane.x > center + halfRoad) plane.x = center + halfRoad;\n\n      // Road markings scroll\n      road.lineOffset += plane.speed * dt * 25;\n      if (road.lineOffset > 40) road.lineOffset = 0;\n\n      document.getElementById('speed').textContent = `Speed: ${(plane.speed * 3.6).toFixed(0)} km/h`;\n    }\n\n    function drawRoad() {\n      ctx.save();\n      ctx.translate(w / 2, 0);\n\n      // asphalt\n      ctx.fillStyle = '#2c2c2c';\n      ctx.fillRect(-road.width / 2, 0, road.width, h);\n\n      // side lines\n      ctx.fillStyle = '#e0e0e0';\n      ctx.fillRect(-road.width / 2 + 10, 0, 6, h);\n      ctx.fillRect(road.width / 2 - 16, 0, 6, h);\n\n      // lane markers\n      const laneWidth = road.width / road.laneCount;\n      ctx.strokeStyle = '#f8f8f8';\n      ctx.lineWidth = 4;\n      ctx.setLineDash([25, 25]);\n      for (let i = 1; i < road.laneCount; i++) {\n        ctx.beginPath();\n        const x = -road.width / 2 + i * laneWidth;\n        ctx.moveTo(x, -40 + road.lineOffset);\n        ctx.lineTo(x, h + 40 + road.lineOffset);\n        ctx.stroke();\n      }\n      ctx.restore();\n    }\n\n    function drawPlane() {\n      ctx.save();\n      ctx.translate(plane.x, plane.y);\n      ctx.fillStyle = plane.color;\n      // body\n      ctx.fillRect(-plane.width / 2, -plane.height / 2, plane.width, plane.height);\n      // nose\n      ctx.beginPath();\n      ctx.moveTo(-plane.width / 2, -plane.height / 2);\n      ctx.lineTo(plane.width / 2, -plane.height / 2);\n      ctx.lineTo(0, -plane.height / 2 - 16);\n      ctx.closePath();\n      ctx.fill();\n      // wings\n      ctx.fillRect(-plane.width - 10, -plane.height / 3, plane.width * 2 + 20, plane.height / 6);\n      // tail\n      ctx.fillRect(-plane.width / 4, plane.height / 2 - 10, plane.width / 2, 16);\n      ctx.restore();\n    }\n\n    let last = performance.now();\n    function loop(t) {\n      const dt = Math.min(0.033, (t - last) / 1000);\n      last = t;\n      update(dt);\n      ctx.clearRect(0, 0, w, h);\n      drawRoad();\n      drawPlane();\n      requestAnimationFrame(loop);\n    }\n    requestAnimationFrame(loop);\n  </script>\n</body>\n</html>\n"}]}